<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Countries</title>
</head>
<body>
  <h1>Lista de países</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Región</th>
        <th>Población</th>
        <th>Capital</th>
        <th>Área</th>
      </tr>
    </thead>
    <tbody>
      <% countries.forEach(country => { %>
        <tr>
          <td><%= country.name %></td>
          <td><%= country.region %></td>
          <td><%= country.population %></td>
          <td><%= country.capital %></td>
          <td><%= country.area %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
