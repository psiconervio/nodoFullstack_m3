<div>
  <% if (superheroe) { %>
    <!-- Imprimir el superhéroe en la consola del navegador -->

    <form >
      <br>

      <label for="nombreSuperHeroe">Nombre del Superhéroe</label>
      <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" value="<%= superheroe.nombreSuperHeroe || '' %>" required />
      <br>
      <label for="nombreReal">Nombre Real</label>
      <input type="text" id="nombreReal" name="nombreReal" value="<%= superheroe.nombreReal || '' %>" required />
      <br>

      <label for="edad">Edad</label>
      <input type="number" id="edad" name="edad" value="<%= superheroe.edad || '' %>" required />
      <br>

      <label for="planetaOrigen">Planeta de Origen</label>
      <input type="text" id="planetaOrigen" name="planetaOrigen" value="<%= superheroe.planetaOrigen || '' %>" required />
      <br>

      <label for="debilidad">Debilidad</label>
      <input type="text" id="debilidad" name="debilidad" value="<%= superheroe.debilidad || '' %>" required />
      <br>

      <label for="poderes">Poderes</label>
      <textarea id="poderes" name="poderes" rows="4"><%= superheroe.poderes ? superheroe.poderes.join(', ') : '' %></textarea>
      <br>

      <label for="aliados">Aliados</label>
      <textarea id="aliados" name="aliados" rows="3"><%= superheroe.aliados ? superheroe.aliados.join(', ') : '' %></textarea>
      <br>

      <label for="enemigos">Enemigos</label>
      <textarea id="enemigos" name="enemigos" rows="3"><%= superheroe.enemigos ? superheroe.enemigos.join(', ') : '' %></textarea>
      <br>

      <button id="boton" type="submit">Actualizar Superhéroe</button>

    </form>
  <% } else { %>
    <p>El superhéroe no se encontró. <a href="/superheroes">Volver a la lista</a></p>
  <% } %>
</div>